{
  "name": "php-class",
  "displayName": "PHP Class",
  "description": "IDE-like PHP class creation with namespace support.",
  "version": "0.0.1",
  "publisher": "mnavarrocarter",
  "engines": {
    "vscode": "^1.19.0"
  },
  "license": "MIT",
  "keywords": [
    "php",
    "ide",
    "files"
  ],
  "author": {
    "name": "Matias Navarro Carter",
    "email": "mnavarrocarter@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sevavietl/vscode-php-files.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.createClass"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PHP Files configuration",
      "properties": {
        "php-files.templates.PHPClass": {
          "type": "array",
          "default": [
            "<?php",
            "class PHPClass",
            "{",
            "}"
          ],
          "description": "Template for PHP Class"
        },
        "php-files.templates.PHPInterface": {
          "type": "array",
          "default": [
            "<?php",
            "interface PHPInterface",
            "{",
            "}"
          ],
          "description": "Template for PHP Interface"
        },
        "php-files.templates.PHPTrait": {
          "type": "array",
          "default": [
            "<?php",
            "trait PHPTrait",
            "{",
            "}"
          ],
          "description": "Template for PHP Trait"
        }
      }
    },
    "commands": [
      {
        "command": "extension.createClass",
        "title": "New PHP Class"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createClass",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.10.14",
    "@types/vscode": "^1.53.0",
    "ts-mockito": "^2.2.7",
    "typescript": "^3.9.7",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "php-writer": "git+https://github.com/Sevavietl/php-writer.git"
  }
}
